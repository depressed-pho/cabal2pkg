cabal-version:      3.4
name:               cabal2pkg
version:            0.1.0.0
synopsis:           Tool to automate importing Cabal packages to pkgsrc
-- description:
homepage:           https://github.com/depressed-pho/cabal2pkg
license:            CC0-1.0
license-file:       LICENSE
author:             PHO
maintainer:         pho@cielonegro.org
-- copyright:
category:           Distribution
build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

common warnings
    ghc-options: -Wall -Wextra -Wunused-packages

executable cabal2pkg
    import:           warnings
    main-is:          Main.hs

    other-modules:
        Cabal2Pkg.CmdLine
        Cabal2Pkg.Command.Init
        Cabal2Pkg.Utils

    build-depends:
        base                 == 4.*
      , base-unicode-symbols ^>= 0.2.4
      , bytestring           ^>= 0.12.1
      , conduit              ^>= 1.3.5
      , exceptions           ^>= 0.10.7
      , filepath             ^>= 1.4 && < 1.6
      , optparse-applicative ^>= 0.18.1
      , resourcet            ^>= 1.3.0
      , tar-conduit          ^>= 0.4.1

    hs-source-dirs:   src
    default-language: GHC2021
